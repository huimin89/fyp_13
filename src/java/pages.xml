<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <package name="pages" namespace="/pages" extends="struts-default,json-default">
        <action name="processData" method ="processData" class="controllers.DisplayReviews">
            <result type="json"/>
        </action>
        
        <action name="updateData" method ="updateData" class="controllers.DisplayReviews">
            <result type="json"/>
        </action>
        
        <action name="DisplayReviews" method="execute" class="controllers.DisplayReviews">
            <result name="SUCCESS">DisplayReviews.jsp</result>
        </action>
        
        <action name="DisplayAllHotels" method="execute" class="controllers.DisplayAllHotels">
            <result name="SUCCESS">DisplayAllHotels.jsp</result>
        </action>
        
        <action name="processHotelData" method="processData" class="controllers.DisplayAllHotels">
            <result type="json"/>
        </action>
        
        <action name="DisplayAllReviewers" method="execute" class="controllers.DisplayAllReviewers">
           <result name="SUCCESS">DisplayAllReviewers.jsp</result>
        </action>
        
        <action name="processReviewerData" method="processData" class="controllers.DisplayAllReviewers">
            <result type="json"/>
        </action>

        <action name="DisplayPastReviews" method="execute" class="controllers.DisplayPastReviews">
           <result name="SUCCESS">DisplayPastReviews.jsp</result>
        </action>
        
        <action name="processPastReviewData" method="processData" class="controllers.DisplayPastReviews">
            <result type="json"/>
        </action>
        
        <action name="processReviewsByReviewer" method="processReviewData" class="controllers.DisplayPastReviews">
            <result type="json"/>
        </action>
        
        <action name="DisplaySpamReviews" method="execute" class="controllers.DisplaySpamReviews">
           <result name="SUCCESS">DisplaySpamReviews.jsp</result>
        </action>
        
        <action name="processSpamReview" method="processData" class="controllers.DisplaySpamReviews">
            <result type="json"/>
        </action>
        
        <action name="processSpamReview2" method="processData2" class="controllers.DisplaySpamReviews">
            <result type="json"/>
        </action>
        
        <action name="deleteComment" method="deleteComment" class="controllers.DisplaySpamReviews">
            <result type="json"/>
        </action>
        
        <action name="index" method="execute" class="controllers.Index">
            <result name="SUCCESS"/>
        </action>
        
        <action name="login" method="validateLogin" class="controllers.Index">
            <result name="SUCCESS">DisplayAllHotels.jsp</result>
            <result name="FAIL">Index2.jsp</result>
        </action>
        
        <action name="logout" method="logout" class="controllers.Index">
            <result name="SUCCESS">Index2.jsp</result>
        </action>
    </package>
</struts>

